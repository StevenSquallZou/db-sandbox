CREATE TABLE server_config (
    application VARCHAR(100) NOT NULL,
    profile VARCHAR(30) NOT NULL,
    label VARCHAR(30) NOT NULL,
    prop_key VARCHAR(60) NOT NULL,
    prop_value LONGTEXT NOT NULL,
    description VARCHAR(255) NOT NULL,
    enter_central_time TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
    modify_central_time TIMESTAMP ON UPDATE CURRENT_TIMESTAMP
)
;

GRANT SELECT, INSERT, UPDATE, DELETE ON server_config TO 'app'@'%';
